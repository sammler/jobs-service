{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "capitalized-comments": "off",
    "mocha/no-exclusive-tests": "error",
    "no-inline-comments": "off",
    "no-undef": "off",
    "no-unused-vars": "off",
    "no-unused-expressions": "off",
    "new-cap": "off",
    "max-nested-callbacks": "off"
  }
}
