{
  "name": "jobs-service",
  "version": "0.0.13",
  "description": "Job service for sammler.",
  "keywords": [
    "sammler"
  ],
  "homepage": "https://github.com/sammler/job-service",
  "license": "MIT",
  "author": {
    "name": "Stefan Walther",
    "url": "https://github.com/stefanwalther",
    "twitter": "waltherstefan"
  },
  "main": "src/index.js",
  "repository": "https://github.com/sammler/job-service",
  "scripts": {
    "d-build": "docker build .",
    "dc-down:dev": "docker-compose --f=./docker-compose.dev.yml down",
    "dc-up:dev": "docker-compose --f=./docker-compose.dev.yml up --build",
    "docs": "docker run --rm -v ${PWD}:/opt/verb stefanwalther/verb",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "eslint src",
    "lint:src:fix": "eslint src --fix",
    "lint:test": "eslint test",
    "lint:test:fix": "eslint test --fix",
    "start": "node src/api/index.js",
    "start:dev": "nodemon -L --watch ./src/api --exec npm run start",
    "test": "npm run lint:src && npm run lint:test && npm run test:integration",
    "test:integration": "mocha --env SAMMLER_DB_JOBS_URI=mongodb://localhost:57017/jobs --env NODE_ENV=test './test/integration/**/*.spec.js' --require './test/mocha.conf.js' --timeout 6000",
    "test:unit": "mocha --env NODE_ENV=test './test/unit/**/*.spec.js' --require './test/mocha.conf.js'",
    "precommit": "npm run lint --quiet && npm run docs"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "body-parser": "^1.16.0",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
    "express": "^4.14.1",
    "helmet": "^3.5.0",
    "http-status-codes": "^1.1.6",
    "js-yaml": "^3.7.0",
    "lodash": "^4.17.4",
    "mongoose": "^4.8.0",
    "mongoose-connection-promise": "^0.2.2",
    "mongoose-materialized": "^0.1.9",
    "mongoose-timestamp": "^0.6.0",
    "morgan": "^1.8.1",
    "sammler-nodelib-logger": "sammler/sammler-nodelib-logger",
    "swagger-jsdoc": "^1.9.1",
    "swagger-ui-express": "^2.0.7"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "codecov": "^2.1.0",
    "eslint": "^4.6.1",
    "eslint-config-space-single": "^0.2.0",
    "eslint-plugin-mocha": "^4.8.0",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "supertest": "^3.0.0"
  },
  "engines": {},
  "verb": {
    "run": true,
    "toc": false,
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": []
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "verb",
      "verb-readme-generator"
    ]
  },
  "winster": {
    "configFile": "./src/config/winster-config.js"
  }
}
